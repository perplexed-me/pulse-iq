# ===========================================
# PulseIQ Payment Service Environment Configuration
# ===========================================
# Copy this file to .env and adjust values as needed
# DO NOT commit .env to version control!

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/Billing
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=your_password_here

# ===========================================
# SSLCOMMERZ CONFIGURATION
# ===========================================
SSLCOMMERZ_STORE_ID=testbox
SSLCOMMERZ_STORE_PASSWORD=your_store_password_here
SSLCOMMERZ_API_URL=https://sandbox.sslcommerz.com/gwprocess/v4/api.php
SSLCOMMERZ_SUCCESS_URL=http://localhost:8082/payment/payments/success
SSLCOMMERZ_FAIL_URL=http://localhost:8082/payment/payments/fail
SSLCOMMERZ_CANCEL_URL=http://localhost:8082/payment/payments/cancel
SSLCOMMERZ_IPN_URL=http://localhost:8082/payment/api/payments/ipn

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here

# ===========================================
# APPLICATION EMAIL SETTINGS
# ===========================================
APP_EMAIL_NAME=PulseIQ Payment System
